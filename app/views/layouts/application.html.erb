<!DOCTYPE html>
<html>
<head>
  <title>LightItUp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'layouts/nav' %>
<% if flash[:notice]%>
  <div id='nav-error' class='nav-error'>
 	  <%= flash[:notice] %>
  </div>
<% end %>

<!-- user model errors -->
<% if @errors%> 
  <div id='nav-error' class='nav-error'>
    <%= @errors.full_messages.first %>
  </div>
<% end %>
<!-- end user model errors -->

<%= yield %>

</body>
</html>
