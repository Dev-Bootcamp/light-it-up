<div class="nav">
  <%= link_to(root_path) do %>
  <div class="logo">
    <%= svg("light_it_up_logo") %>
    <h1>Light It Up!</h1>
  </div>
  <% end %>

  <div class="login">
    <% if current_user %>
      <div>
        <p><%= link_to "#{current_user.email}", user_path(current_user) %></p>
        <p><%= link_to "Log out", logout_path, method: "delete" %></p>
      </div>
    <% else %>
      <div class="sign-up">
        <p>Not a user?</p>
        <%= link_to "Sign up", signup_path %>
      </div>
      <div class="form">
        <%= form_tag login_path do %>
          <%= email_field_tag :email, nil, :placeholder => 'your@email.com' %>
          <%= password_field_tag :password, nil, :placeholder => 'password min 8'  %>
          <%= submit_tag "Log in", :class => "button" %>
        <% end %>
      </div>
    <% end %>
  </div>

</div>
