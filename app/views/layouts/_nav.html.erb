<div class="nav">
  <%= link_to(root_path) do %>
  <div class="logo">
    <%= svg("logo") %>
    <h1>Light It Up!</h1>
  </div>
  <% end %>

  <div class="login">
    <% if session? %>
      <div>
        <p><%= link_to "#{session_user.name}", user_path(session_user) %></p>
        <p><%= link_to "Sign out", signout_path %></p>
      </div>
    <% else %>
      <div class="sign-up">
        <p>Not a user?</p>
        <%= link_to "Sign up", signup_path %>
      </div>
      <div class="form">
        <%= form_for :user , url: login_path do |f| %>
          <%= f.email_field :email, :placeholder => "email" %>
          <%= f.password_field :password, :placeholder => "password" %>
          <%= f.submit "Log in", :class => "button" %>
        <% end %>
      </div>
    <% end %>
  </div>

</div>
<% if @error == "login" %>
  <div class="nav-error">
    Wrong username or password.
  </div>
<% end %>
