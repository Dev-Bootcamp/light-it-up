<div class="nav">
  <%= link_to(root_path) do %>
  <div class="logo">
    <%= svg("light_it_up_logo") %>
    <h1>Light It Up!</h1>
  </div>
  <% end %>

  <div class="login">
    <% if session? %>
      <div>
        <p><%= link_to "#{session_user.email}", user_path(session_user) %></p>
        <p><%= link_to "Log out", logout_path, method: "delete" %></p>
      </div>
    <% else %>
      <div class="sign-up">
        <p>Not a user?</p>
        <%= link_to "Sign up", signup_path %>
      </div>
      <div class="form">
        <% @user = User.new %>
        <%= form_tag login_path do %>
          <%= email_field_tag :email %>
          <%= password_field_tag :password %>
          <%= submit_tag "Log in", :class => "button" %>
        <% end %>
      </div>
    <% end %>
  </div>

</div>
<% if @error == "login" %>
  <div class="nav-error">
    Wrong username or password.
  </div>
<% end %>
