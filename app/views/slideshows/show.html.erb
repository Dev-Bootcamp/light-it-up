<div class="grid-100 top-50 shadow">
<h1><%= @slideshow.name %> </h1>

<%= link_to 'Add new slide', new_slide_path %>


<div class="slides">
<h4>Slides</h4>
  <% @slideshow.slides.each do |slide| %>
    <%= link_to slide.title , edit_slide_path(slide) %>

  <% end %>
</div>

<div class="slidshow" style="width: <%= @slideshow.px_width %>px; height: <%= @slideshow.px_height %>px">
</div>



</div>
